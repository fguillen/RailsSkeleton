<%= form_for [:admin, current_admin_user, @user_notifications_pref] do |f| %>
  <%= render "/shared/form_errors", :object => f.object %>

  <legend><%= "Notifications Preferences" %></legend>
  <hr>

  <% USER_NOTIFICATIONS_ROLES["admin"].each do |user_notification_name| %>
    <div class="form-check">
      <%= f.check_box("active_notifications", { :multiple => true, class: "form-check-input", id: "check_#{user_notification_name}" }, user_notification_name, "") %>
      <%= f.label :active_notifications, t("views.user_notifications_prefs.active_notification.#{user_notification_name}.name"), class: "form-check-label", for: "check_#{user_notification_name}" %>
      <div class="form-text"><%= t("views.user_notifications_prefs.active_notification.#{user_notification_name}.description") %></div>
    </div>

  <% end %>

  <div class="form-group row mt-3">
    <div class="col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
